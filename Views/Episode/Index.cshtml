@model IEnumerable<Episode>

@{
    ViewData["Title"] = "Episodes Index";
    int id = Convert.ToInt32(ViewContext.RouteData.Values["id"]);
}

<div class="text-center">
    <h1 class="display-4">Are you Ready?</h1>
    
</div>
<a asp-action="Add" asp-controller="Episode" class="ml-3">Add</a>
<div class="text-center">
    <h1 class="display-4">Seasons</h1>

    @* create links to filter classes by day, mark selected day with 'btn-dark' css class *@
    @foreach (Episode d in Model)
    {
        string btnCss = (id == d.Season) ? "btn btn-dark" : "btn btn-outline-dark";
        <a asp-action="Index" asp-route-id="@d.EpisodeId" class="@btnCss mr-1 mb-2">@d.Season</a>
    }
</div>


<table class="table">
    <thead>
        <tr><th>Title</th><th>Description</th><th>Season</th><th></th></tr>
    </thead>
    <tbody>
        @foreach (Episode c in Model)
        {
            <tr>
                <td>@c.Title</td>
                <td>@c.Description</td>
                <td>@c.Season</td>
                <td hidden>@c.EpisodeId</td>
                
                <td>
                    <a asp-action="Add" asp-controller="Episode" asp-route-id="@c.EpisodeId"
                       class="btn btn-outline-dark">Edit</a>
                   
                </td>
                <td>
                    <a asp-action="Delete" asp-controller="Episode" asp-route-id="@c.EpisodeId"
                       class="btn btn-outline-dark">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>


